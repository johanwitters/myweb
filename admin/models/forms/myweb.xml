<?xml version="1.0" encoding="utf-8"?>
<form
				addrulepath="/administrator/components/com_myweb/models/rules"
>
	<fieldset
				name="details"
				label="COM_MYWEB_MYWEB_DETAILS"
	>
		<field
				name="id"
				type="hidden"
				/>
		<field
				name="greeting"
				type="text"
				label="COM_MYWEB_MYWEB_GREETING_LABEL"
				description="COM_MYWEB_MYWEB_GREETING_DESC"
				size="40"
				class="inputbox validate-greeting"
				validate="greeting"
				required="true"
				default=""
				/>
		<field
				name="catid"
				type="category"
				extension="com_myweb"
				class="inputbox"
				default=""
				label="COM_MYWEB_MYWEB_FIELD_CATID_LABEL"
				description="COM_MYWEB_MYWEB_FIELD_CATID_DESC"
				required="true"
		>
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>
		<field
				name="latitude"
				type="number"
				label="COM_MYWEB_MYWEB_FIELD_LATITUDE_LABEL"
				description="COM_MYWEB_MYWEB_FIELD_LATITUDE_DESC"
				min="-90.0"
				max="90.0"
				class="inputbox"
				required="true"
				default="0.0"
				/>
		<field
				name="longitude"
				type="number"
				label="COM_MYWEB_MYWEB_FIELD_LONGITUDE_LABEL"
				description="COM_MYWEB_MYWEB_FIELD_LONGITUDE_DESC"
				min="-180.0"
				max="180.0"
				class="inputbox"
				required="true"
				default="0.0"
				/>
	</fieldset>
	<fields name="imageinfo">
		<fieldset
			name="image-info"
			label="COM_MYWEB_IMAGE_FIELDS"
		>
			<field
				name="image"
				type="media"
				preview="tooltip"
				label="COM_MYWEB_MYWEB_FIELD_IMAGE_LABEL"
				description="COM_MYWEB_MYWEB_FIELD_IMAGE_DESC" />
			<field name="alt"
				type="text"
				label="COM_MYWEB_MYWEB_FIELD_ALT_LABEL"
				description="COM_MYWEB_MYWEB_FIELD_ALT_DESC"
				size="30"/>
			<field name="caption"
				type="text"
				label="COM_MYWEB_MYWEB_FIELD_CAPTION_LABEL"
				description="COM_MYWEB_MYWEB_FIELD_CAPTION_DESC"
				size="30"/>
		</fieldset>
	</fields>
	<fields name="params">
		<fieldset
				name="params"
				label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
		>
			<field
					name="show_category"
					type="list"
					label="COM_MYWEB_MYWEB_FIELD_SHOW_CATEGORY_LABEL"
					description="COM_MYWEB_MYWEB_FIELD_SHOW_CATEGORY_DESC"
					default=""
			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		</fieldset>
	</fields>
	<fieldset
			name="accesscontrol"
			label="COM_MYWEB_FIELDSET_RULES"
	>
    	<field
				name="asset_id"
				type="hidden"
				filter="unset"
				/>
    	<field
				name="rules"
				type="rules"
				label="COM_MYWEB_FIELD_RULES_LABEL"
				filter="rules"
				validate="rules"
				class="inputbox"
				component="com_myweb"
				section="message"
				/>
    </fieldset>
</form>